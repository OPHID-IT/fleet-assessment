<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#66C1FF"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_centerInParent="true"/>


    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="2dp"
        android:background="@drawable/searchview_background"
        android:queryBackground="@null"
        android:queryHint="Registration Number"
        android:iconifiedByDefault="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textCapCharacters"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
    />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:layout_centerInParent="true"/>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        >

        <TextView
        android:id="@+id/regNumTextView"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textSize="17dp"
        android:layout_marginLeft="15dp"
        android:text="No Vehicle Selected"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:elevation="2dp"
        android:textAlignment="center"
        />


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/regNumTextView"
            android:background="@drawable/syncicon" />
    </RelativeLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_window_curved_top_background"
    android:elevation="3dp"
    android:layout_marginTop="15dp"
    android:id="@+id/homeLinearLayout"
        >

        <TextView
            android:id="@+id/processtextview"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:text="No form selected"
            android:elevation="2dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/pbartextview"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:text="Progress 20/34"
            android:gravity="center"
            android:elevation="2dp"
            android:textAlignment="center"
        />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

            <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
                android:id="@+id/llayouta"
                >
            <TextView
                android:id="@+id/datetextview"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="14dp"
                android:layout_marginLeft="15dp"
                android:text="Activity date"
                android:gravity="center"
                android:elevation="2dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="14dp"
                android:layout_marginLeft="15dp"
                android:text="27-04-2023"

          />
    </LinearLayout>
    <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:id="@+id/llayoutb"
                android:layout_toRightOf="@id/llayouta"
        >
            <TextView
                android:id="@+id/syncstatustextview"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="14dp"
                android:layout_marginLeft="15dp"
                android:text="Sync Status"
                android:gravity="center"
                android:elevation="2dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:id="@+id/syncstatus"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="14dp"
                android:layout_marginLeft="15dp"
                android:text="Not synced"
                />
            </LinearLayout>

</RelativeLayout>


        <TextView
            android:id="@+id/unsynced_entries"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textSize="14dp"
            android:layout_marginLeft="15dp"
            android:text="Entries pending syncing"
            android:gravity="center"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

</LinearLayout>



</LinearLayout>